{% extends 'frontend/layouts/base.html.twig' %}
{% block content %}
    <main class="main contact-two mb-4">
        <nav aria-label="breadcrumb" class="breadcrumb-nav sticky-header p-0 mb-0">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_accueil') }}"><i class="icon-home"></i></a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('app_blogs') }}">Blogs</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#">{{ blog.titre }}</a></li>
                </ol>
            </div><!-- End .container -->
        </nav>

        <div class="container mt-2">
            <div class="row">
                <div class="col-lg-12">
                    <article class="post single" style="margin-bottom: 0px !important;">
                        <div class="post-body" style="padding-bottom: 0px !important;
">
                            <div class="post-date">
                                <span class="day">{{ blog.date| date("d") }}</span>
                                <span class="month">{{ blog.date|date("M") }}</span>
                            </div><!-- End .post-date -->
                            <h2 class="post-title">{{ blog.titre }}</h2>
                            <div class="post-content" style="margin-bottom: 16px !important;">
                                {{ blog.longDesc| raw }}
                            </div><!-- End .post-content -->
                        </div><!-- End .post-body -->
                    </article><!-- End .post -->
                </div><!-- End .col-lg-9 -->
                <div class="col-lg-12">
<hr style="margin: 0 !important;">
                    <div class="related-posts">
                        <h4>Derniers <strong>Blogs</strong></h4>

                        <div class="owl-carousel owl-theme related-posts-carousel" data-owl-options="{
								'dots': false
							}">
                            {% for blog in blogs %}
                                <article class="post">
                                <div class="post-media zoom-effect">
                                    <a href="{{ path('app_blog', {'id': blog.id}) }}">
                                        <img src="{{ asset('uploads/images/blogs/'~blog.imageName) }}" alt="Post">
                                    </a>
                                </div><!-- End .post-media -->

                                <div class="post-body">
                                    <div class="post-date">
                                        <span class="day">{{ blog.date| date("d") }}</span>
                                        <span class="month">{{ blog.date|date("M") }}</span>
                                    </div><!-- End .post-date -->

                                    <h2 class="post-title">
                                        <a href="{{ path('app_blog', {'id': blog.id}) }}">{{ blog.titre }}</a>
                                    </h2>

                                    <div class="post-content">
                                        <p>{{ blog.courteDesc }}</p>

                                        <a href="{{ path('app_blog', {'id': blog.id}) }}" class="read-more">Voir plus <i
                                                    class="fas fa-angle-right"></i></a>
                                    </div><!-- End .post-content -->
                                </div><!-- End .post-body -->
                                </article>{% endfor %}


                        </div><!-- End .owl-carousel -->
                    </div><!-- End .related-posts -->
                </div>

            </div><!-- End .row -->
        </div>
    </main><!-- End .main -->


{% endblock %}
