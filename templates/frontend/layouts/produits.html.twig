{% for produit in produits %}
    <div class="col-6 col-sm-3">
        <div class="product-default">
            <figure>

                <a href="{{ path('app_produit', {'slug': produit.slug}) }}">
                    {% for image in produit.images | slice(0,2) %}
                        <img src="{{ asset('uploads/images/produits/'~image.imageName) }}"
                             style="height: 300px !important;width:100% !important;" alt="product">
                    {% endfor %}
                </a>

                <div class="label-group">
                    <div class="product-label label-hot">Nouveau</div>
                    {% if produit.reductionApplique %}

                        <div class="product-label label-sale">- {{ produit.valReduction }}</div>

                    {% endif %}

                </div>
            </figure>

            <div class="product-details">
                <div class="category-wrap">
                    <div class="category-list">
                        {% for categorie in produit.categories %}
                            <a href="{{ path('app_categorie', {'slug': categorie.slug}) }}" class="product-category">{{ categorie.nom }}</a>
                            {% if loop.index!=loop.last %}
                                ,&nbsp; {% endif %}
                        {% endfor %}

                    </div>


                </div>

                <h3 class="product-title"><a
                            href="{{ path('app_produit', {'slug': produit.slug}) }}">{{ produit.nom }}</a>
                </h3>

                <div class="ratings-container">
                    <div class="product-ratings">
                        <span class="ratings" style="width:100%"></span>
                        <!-- End .ratings -->
                        <span class="tooltiptext tooltip-top"></span>
                    </div>
                    <!-- End .product-ratings -->
                </div>
                <!-- End .product-container -->

                <div class="price-box">
                    {% if produit.reductionApplique %}
                        <span class="old-price">{{ produit.prixVente }} DH</span>
                        <span class="product-price">{{ produit.prixReduction }} DH</span>

                    {% else %}
                        <span class="product-price">{{ produit.prixVente }} DH</span>
                    {% endif %}

                </div>
                <!-- End .price-box -->

                <div class="product-action">
                    <a href="#" class="btn-icon-wish btn-favoris" title="wishlist" data-produit="{{ produit.id }}"><i
                                class="icon-heart"></i></a>
                    <a href="#"
                       class="btn-icon btn-add-cart" data-produit="{{ produit.id }}"><i
                                class="fa fa-arrow-right"></i><span>Ajouter au panier</span></a>
                    <a href="#" class="btn-quickview"
                       title="Quick View"><i class="fas fa-external-link-alt"></i></a>
                </div>
            </div>
            <!-- End .product-details -->
        </div>
    </div>
    <!-- End .product-default -->
{% endfor %}