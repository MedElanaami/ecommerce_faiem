{% extends 'frontend/layouts/base.html.twig' %}


{% block content %}
    <main class="main contact-two mb-4">
        <nav aria-label="breadcrumb" class="breadcrumb-nav sticky-header p-0 mb-0">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_accueil') }}"><i class="icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_login') }}"></a></li>
                    <li class="breadcrumb-item active" aria-current="page">Inscription</li>
                </ol>
            </div><!-- End .container -->
        </nav>
        <div class="container">
            <div class="row ">
                <div class="col-md-12">
                    <h2 class="ls-0 mb-1 pb-1"><strong>Inscription</strong></h2>
                            <ul class="checkout-steps ">
                                <li>
                                    <div class="row mt-2">
                                        <div class="col-lg-6">
                                            <ul class="checkout-steps ">
                                                <li>
                                                    {{ form_start(form,{ 'attr':{'id':'form-checkout'}}) }}
                                                    <div class="form-group">
                                                        <label>Nom
                                                            <abbr class="required" title="required">*</abbr>
                                                        </label>
                                                        {{ form_widget(form.nom,{ 'attr':{'class':'form-control'}}) }}
                                                        {% if form_errors(form.nom) %}
                                                            <div class="alert alert-danger" role="alert">
                                                                {{ form_errors(form.nom) }}
                                                            </div>
                                                        {% endif %}

                                                    </div>
                                                    <div class="form-group">
                                                        <label>Prénom
                                                            <abbr class="required" title="required">*</abbr>
                                                        </label>
                                                        {{ form_widget(form.prenom,{ 'attr':{'class':'form-control'}}) }}
                                                        {% if form_errors(form.prenom) %}
                                                            <div class="alert alert-danger" role="alert">
                                                                {{ form_errors(form.prenom) }}
                                                            </div>
                                                        {% endif %}
                                                    </div>

                                                        <div class="form-group">
                                                            <label>Nom d'utilisateur
                                                                <abbr class="required" title="required">*</abbr></label>
                                                            {{ form_widget(form.username,{ 'attr':{'class':'form-control'}}) }}
                                                            {% if form_errors(form.username) %}
                                                                <div class="alert alert-danger" role="alert">
                                                                    {{ form_errors(form.username) }}
                                                                </div>
                                                            {% endif %}

                                                        </div>

                                                        <div class="form-group">
                                                            <label>Mot de Passe
                                                                <abbr class="required" title="required">*</abbr></label>
                                                            {{ form_widget(form.plainPassword,{ 'attr':{'class':'form-control'}}) }}
                                                            {% if form_errors(form.plainPassword) %}
                                                                <div class="alert alert-danger" role="alert">
                                                                    {{ form_errors(form.plainPassword) }}
                                                                </div>
                                                            {% endif %}
                                                        </div>
                                                    <div class="form-group">
                                                        <label>Téléphone <abbr class="required"
                                                                               title="required">*</abbr></label>
                                                        {{ form_widget(form.tel,{ 'attr':{'class':'form-control','title':'Merci de saisir un num de téléphone sous format (0xxxxxxxxx)'}}) }}
                                                        {% if form_errors(form.tel) %}
                                                            <div class="alert alert-danger" role="alert">
                                                                {{ form_errors(form.tel) }}
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Email
                                                            <abbr class="required" title="required">*</abbr></label>
                                                        {{ form_widget(form.email,{ 'attr':{'class':'form-control'}}) }}
                                                        {% if form_errors(form.email) %}
                                                            <div class="alert alert-danger" role="alert">
                                                                {{ form_errors(form.email) }}
                                                            </div>
                                                        {% endif %}

                                                    </div>
                                                    {{ form_end(form) }}
                                                </li>
                                            </ul>
                                            <button type="submit" class="btn btn-block btn-dark btn-place-order"
                                                    form="form-checkout">
                                                Valider
                                            </button>
                                        </div>

                                    </div>
                                </li>
                            </ul>

                </div><!-- End .col-md-8 -->


            </div><!-- End .row -->
        </div><!-- End .container -->
    </main><!-- End .main -->


{% endblock %}
