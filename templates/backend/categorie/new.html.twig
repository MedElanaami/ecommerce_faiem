{% extends 'backend/layouts/base.html.twig' %}

{% block content %}

    <!-- content HEADER -->
    <!-- ========================================================= -->
    <div class="content-header">
        <!-- leftside content header -->
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="{{ path('admin_accueil') }}">Accueil</a></li>
                <li><a href="{{ path('app_categorie_index') }}">Categories</a></li>
                <li><a>Ajouter</a></li>
            </ul>
        </div>
    </div>
    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
    <!--SEARCHING, ORDENING & PAGING-->
    <div class="row animated fadeInRight">
        <div class="col-md-12">

            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_start(form , { 'attr':{'class':'form-horizontal form-stripe'}}) }}
                            <h6 class="mb-xlg text-center"><b>Ajouter une categorie !</b></h6>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Nom</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.nom,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.description,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Categorie Parent</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.parent,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Slug</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.slug,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Image</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.imageFile,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

{% endblock %}

{% block js %}
    <script>
        categorie = document.getElementById("categorie_nom");
        slug = document.getElementById("categorie_slug")
        categorie.addEventListener("keyup", function () {
            nom= (categorie.value).replace(/ /g,"_");
            slug.value=nom

        })
    </script>
{% endblock %}
