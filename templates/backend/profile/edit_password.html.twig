{% extends 'backend/layouts/base.html.twig' %}

{% block content %}

    <!-- content HEADER -->
    <!-- ========================================================= -->
    <div class="content-header">
        <!-- leftside content header -->
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="{{ path('admin_accueil') }}">Accueil</a></li>
                <li><a>Editer Mot de Passe</a></li>
            </ul>
        </div>
    </div>
    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
    <!--SEARCHING, ORDENING & PAGING-->
    <div class="row animated fadeInRight">
        <div class="col-md-12">

            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_start(form , { 'attr':{'class':'form-horizontal form-stripe'}}) }}
                            <h6 class="mb-xlg text-center"><b>Modifier le mot de passe !</b></h6>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Mot de passe Actuel</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.password,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                                <span class="help-block">{{ form_errors(form.password) }}</span>
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-sm-2 control-label">Nouveau mot de passe</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.plainPassword.first,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                                <span class="help-block">{{ form_errors(form.plainPassword.first) }}</span>
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-sm-2 control-label">VÃ©rification</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.plainPassword.second,{ 'attr':{'class':'form-control'}}) }}
                                </div><span class="help-block">{{ form_errors(form.plainPassword.second) }}</span>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

{% endblock %}


