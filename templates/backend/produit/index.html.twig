{% extends 'backend/layouts/base.html.twig' %}
{% block css %}
    <!--dataTable-->
    <link rel="stylesheet" href="{{ asset('backend/vendor/data-table/media/css/dataTables.bootstrap.min.css') }}">
{% endblock %}

{% block content %}

    <!-- content HEADER -->
    <!-- ========================================================= -->
    <div class="content-header">
        <!-- leftside content header -->
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="{{ path('admin_accueil') }}">Accueil</a></li>
                <li><a>Produits</a></li>
            </ul>
        </div>
    </div>
    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
    <!--SEARCHING, ORDENING & PAGING-->
    <div class="row animated fadeInRight">
        <div class="col-sm-12">
            {# ---PANEL- -#}
            <div class="panel">
                <div class="panel-header panel-success">
                    <h3 class="panel-title">Liste de Produits </h3>

                </div>

                <div class="panel-content">

                    <a class="btn btn-sm btn-success btn-center" href="{{ path('app_produit_new') }}"><span
                                class="fa fa-plus"></span> </a>
                    <a class="btn btn-sm btn-danger"><span class="fa fa-trash"></span> </a>
                    <div class="table-responsive">
                        <table id="basic-table" class="data-table table table-striped nowrap table-hover"
                               cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prix Achat</th>
                                <th>Prix Vente</th>
                                <th>Qte</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for produit in produits %}
                                <tr>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.prixAchat }}</td>
                                    <td>{{ produit.prixVente }}</td>
                                    <td>{{ produit.qteStock }}</td>
                                    <td>
                                        <div class="btn-toolbar btn-group-sm">

                                            <a class="btn btn-warning"
                                               href="{{ path('app_produit_edit', {'id': produit.id}) }}"><i
                                                        class="fa fa-pencil"></i>
                                            </a>
                                            <a class="btn btn-danger"
                                               href="{{ path('app_produit_delete', {'id': produit.id}) }}"
                                               onclick="return confirm('Etes vous sÃ»re de supprimer ce champ?')"><i
                                                        class="fa fa-trash"></i>
                                            </a>
                                            <a class="btn btn-info"
                                               href="{{ path('app_image_index', {'id': produit.id}) }}"><i
                                                        class="fa fa-image"></i>
                                            </a>
                                            <a class="btn btn-success"
                                               href="{{ path('app_produit_categories', {'id': produit.id}) }}"><i
                                                        class="fa fa-tags"></i>
                                            </a>
                                        </div>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

        </div>
    </div>
    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->

{% endblock %}
{% block js %}
    <!--dataTable-->
    <script src="{{ asset('backend/vendor/data-table/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('backend/vendor/data-table/media/js/dataTables.bootstrap.min.js') }}"></script>
    <!--Examples-->
    <script src="{{ asset('backend/javascripts/examples/tables/data-tables.js') }}"></script>
{% endblock %}
