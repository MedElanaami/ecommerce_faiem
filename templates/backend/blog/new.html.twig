{% extends 'backend/layouts/base.html.twig' %}

{% block content %}

<!-- content HEADER -->
<!-- ========================================================= -->
<div class="content-header">
    <!-- leftside content header -->
    <div class="leftside-content-header">
        <ul class="breadcrumbs">
            <li><i class="fa fa-home" aria-hidden="true"></i><a href="{{ path('admin_accueil') }}">Accueil</a></li>
            <li><a>Blogs</a></li>
        </ul>
    </div>
</div>
<!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= -->
<!--SEARCHING, ORDENING & PAGING-->
<div class="row animated fadeInRight">
    <div class="col-md-12">

        <div class="panel">
            <div class="panel-content">
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_start(form , { 'attr':{'class':'form-horizontal form-stripe'}}) }}
                            <h6 class="mb-xlg text-center"><b>Ajouter un blog !</b></h6>
                            <div class="form-group">
                                <label for="name" class="col-sm-2 control-label">Titre</label>
                                <div class="col-sm-10">
                                   {{ form_widget(form.titre,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-sm-2 control-label">Courte Description</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.courteDesc,{ 'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label">Longue Description</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.longDesc,{ 'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="username" class="col-sm-2 control-label"> Image</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.imageFile,{ 'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-primary">Valider</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

    {% endblock %}


